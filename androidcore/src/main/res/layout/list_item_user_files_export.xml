<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/engine_icon_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/amazon_badge" />

    <TextView
        android:id="@+id/engine_name_textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/engine_icon_imageView"
        android:gravity="center_horizontal|center_vertical"
        android:text="GZDoom"
        android:layout_centerVertical="true"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/engine_path_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/engine_size_textView"
        android:layout_toRightOf="@id/engine_name_textView"
        android:text="  primary/path"
        android:layout_centerVertical="true"
        android:textColor="@color/path"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/engine_size_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/enable_checkBox"
        android:text="100KB"
        android:textSize="20dp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/enable_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:theme="@style/ButtonMaterial" />

</RelativeLayout>