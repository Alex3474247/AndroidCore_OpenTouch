<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="500dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Primary folder"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="(MUST be writable)"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/app_dir_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/app_dir_options_button"
                android:gravity="center_vertical"
                android:text="/"
                android:textColor="@color/light_green"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/app_dir_options_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Secondary folder"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="(Optional location to load game data from)"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/appSec_dir_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/appSec_dir_options_button"
                android:gravity="center_vertical"
                android:text="/"
                android:textColor="@color/light_green"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appSec_dir_options_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/immersive_mode_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full screen (Immersive Mode)" />

        <CheckBox
            android:id="@+id/expand_cutout_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand game screen into notch (if present)" />

        <CheckBox
            android:id="@+id/alt_touch_code_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use alternative touch code (may fix touch screen issues)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divide screen resolution: " />

            <Spinner
                android:id="@+id/res_div_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/capture_mouse_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use mouse" />

        <CheckBox
            android:id="@+id/hide_game_menu_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable Menu and Game touchscreen graphics" />

        <CheckBox
            android:id="@+id/use_system_keyboard_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Android keyboard" />

        <CheckBox
            android:id="@+id/enable_vibrate_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable vibrate" />

        <CheckBox
            android:id="@+id/group_similar_engines_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group similar engines on left panel (Restart needed)" />

        <CheckBox
            android:id="@+id/sdl_old_audio_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use old SDL audio backend" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/extras_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="500dp"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/red"
            android:text="RESET ALL SETTINGS">
        </Button>

    </LinearLayout>
</ScrollView>