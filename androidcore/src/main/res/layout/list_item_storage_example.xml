<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/focusable"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Files"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/files_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( pak0, pak1))"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_dir_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/ic_baseline_phone_android_black" />

        <TextView
            android:id="@+id/app_dir_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/OpenTouch/Detla/mods"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/appSec_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appSec_dir_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"

            app:srcCompat="@drawable/ic_baseline_phone_android_black" />

        <TextView
            android:id="@+id/appSec_dir_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/OpenTouch/Detla/mods"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
