<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="500dp"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game direcotry"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Directory which contains your game files. Configuration and save-games are written here so MUST have write access"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/app_dir_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/light_green"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sdcard_base_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="SDCard"/>

        <Button
            android:id="@+id/reset_base_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Reset"/>

        <Button
            android:id="@+id/choose_base_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Choose"/>
    </LinearLayout>
</LinearLayout>